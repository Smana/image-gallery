# Cache Configuration (Valkey)
CACHE_ENABLED=true
CACHE_ADDRESS=localhost:6379
CACHE_PASSWORD=
CACHE_DATABASE=0
CACHE_DEFAULT_TTL=1h

# Optional Cache Performance Settings
# CACHE_MAX_RETRIES=3
# CACHE_POOL_SIZE=10
# CACHE_MIN_IDLE_CONNS=5
# CACHE_MAX_IDLE_CONNS=10
# CACHE_DIAL_TIMEOUT=5s
# CACHE_READ_TIMEOUT=3s
# CACHE_WRITE_TIMEOUT=3s

# OpenTelemetry Configuration
# Service identification
OTEL_SERVICE_NAME=image-gallery
OTEL_SERVICE_VERSION=1.3.0
OTEL_DEPLOYMENT_ENVIRONMENT=development

# Traces (VictoriaTraces / OTLP endpoint)
OTEL_TRACES_ENABLED=true
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=localhost:4318

# For Kubernetes with VictoriaTraces:
# OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=victoriametrics-victoria-logs-single-server:4318

# Metrics (VictoriaMetrics Operator / OTLP endpoint)
OTEL_METRICS_ENABLED=true
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=localhost:4318

# For Kubernetes with VictoriaMetrics Operator:
# OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=vmagent:8429

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Valid log levels: debug, info, warn, error, fatal, panic
# Valid log formats: json, console